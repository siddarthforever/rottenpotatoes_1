-#  This file is app/views/movies/index.html.haml
%h1 All Movies
= form_tag movies_path, :method => :get do
  Include: 
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, if params[:filter]; params[:filter].include?(rating) elsif params[:ratings]; params[:ratings].include?(rating) else; 1 end 
  = submit_tag 'Refresh'
-# logger.debug "New post 54: #{params[:ratings].inspect}"
%table#movies
  %thead
    %tr
      %th{:class => ('hilite' if @val == 'title')}= link_to 'Movie Title',  movies_path(:sort => 'title', :filter => params[:ratings]), :id => 'title_header'
      %th Rating
      %th{:class => ('hilite' if @val == 'release_date')}= link_to 'Release Date', movies_path(:sort => 'release_date', :filter => params[:ratings]), :id => 'release_date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
